<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>
    <%= title %>
  </title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="../js/bootstrap.min.js"></script>
  
  <link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
  <link rel="stylesheet" type="text/css" href="../css/style.css">
  <link rel="stylesheet" type="image" href="../images">
</head>

<body>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1"
          aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#" onclick="window.location = window.location.origin + '/';">Home</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

        <% if(auth == false) {%>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="#" onclick="window.location = window.location.origin + '/carrello';">Carrello</a>
            </li>
            <li>
              <a href="#" onclick="window.location= window.location.origin + '/registrazione';">Registrati</a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Accedi
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu" style="padding: 15px;">

                <form data-validate method="POST" id="form-login" action="/login" >
                  <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" id="accesso-email" name="login_email" placeholder="email" required>
                  </div>

                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="accesso-password" name="login_password" placeholder="password" required>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="check-amministratore" onClick="funzioneAmministratore()" style="width:16px; height:16px">
                    <label class="form-check-label" for="defaultCheck1">
                      Amministratore
                    </label>
                  </div>

                  <button type="submit" class="btn btn-primary">Accedi</button>
                </form>

                <script>

                  function funzioneAmministratore() {
                    if (document.getElementById("check-amministratore").checked == true) {
                      document.getElementById("form-login").action = "/amministrazione/login"
                    } else {
                      document.getElementById("form-login").action = "/login"
                    }
                  }
                </script>
                <li role="separator" class="divider">

                </li>
                <li>
                  <a href="#" onclick="window.location= window.location.origin + '/passwordDimenticata';">Non ricordo la mia password</a>
                </li>
              </ul>
            </li>
          </ul>
          <% } else { %>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <a href="#" onclick="window.location= window.location.origin + '/profilo';">Profilo</a>
              </li>
              <li>
                <a href="#" onclick="window.location= window.location.origin + '/logout';">Logout</a>
              </li>
              <li>
                <!-- Carrello da fare-->
                <a href="#" onclick="window.location = window.location.origin + '/carrello';">Carrello</a>
              </li>



              <% } %>

                <form class="navbar-form navbar-right" action="/cerca" method="GET">
                  <div class="form-group">
                    <input type="text" class="form-control" name="search" placeholder="Search">
                  </div>
                  <button type="submit" class="btn btn-default">Cerca</button>
                </form>
            </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>
  <% if(contenuto == 'prodotti')  {%>
    <nav id="navbar-categorie" class="navbar navbar-default">
      <div class="container">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2"
          aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
          <ul class="nav navbar-nav">
            <li id="categoria">
              <a href="#" onclick="window.location = window.location.origin + '/categoria?cat=laptops';">Laptops </a>
            </li>
            <li id="categoria">
              <a href="#" onclick="window.location = window.location.origin + '/categoria?cat=desktops';">Desktops </a>
            </li>
            <li id="categoria">
              <a href="#" onclick="window.location = window.location.origin + '/categoria?cat=monitors';">Monitors </a>
            </li>
            <li id="categoria">
              <a href="#" onclick="window.location = window.location.origin + '/categoria?cat=tablets';">Tablets </a>
            </li>
            <li id="categoria">
              <a href="#" onclick="window.location = window.location.origin + '/categoria?cat=accessori';">Accessori </a>
            </li>
          </ul>
        </div>

    </nav>
    <% }else if(contenuto == 'profilo') { %>
      <nav id="navbar-categorie" class="navbar navbar-default">
        <div class="container">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2"
            aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
              <li id="profilo">
                <a href="#" onclick="window.location = window.location.origin + '/profilo';">Profilo </a>
              </li>
              <li id="profilo">
                <a href="#" onclick="window.location = window.location.origin + '/profilo/storicoordini';">Ordini </a>
              </li>
            </ul>
          </div>

      </nav>
      <% } %>

        <!-- inizio contenuti -->
        <div id="contenuto" class="container">
          <%- include(contenuto) %>
        </div>

</body>

